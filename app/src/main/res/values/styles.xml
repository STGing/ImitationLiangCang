<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--主页面底部RadioButton-->
    <style name="MainRadioButton">

        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@drawable/mainactivity_radiobutton_textselecter</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>

    </style>

    <!--品牌商品页面RadioButton-->
    <style name="BrandGoodsListRadioButton">

        <item name="android:background">@drawable/brand_goodslist_rbbg_selecter</item>
        <item name="android:textColor">@drawable/brand_goodslist_tv_selecter</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--达人页面menu下面popupwindow里面RadioButton菜单-->
    <style name="TrendPersonRadioButton">
        <item name="android:background">@drawable/trend_person_menu_rbbg_selecter</item>
        <item name="android:textColor">@drawable/trend_person_menu_rbtvcolor_selecter</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <!--杂志页面的RadioButton-->
    <style name="MagazineRadioButton">
        <item name="android:textColor">@drawable/magazine_tv_selecter</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
