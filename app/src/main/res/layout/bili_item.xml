<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bili_item_iv"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/bili_item_tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#444444"
            tools:text="绘画专区" />

        <TextView
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_gray_arrow_right"
            android:id="@+id/bili_item_tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:textColor="#444444"
            tools:text="当前 100 个直播" />



    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bili_item_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bili_item_btn"
            android:background="#fafafa"
            android:text="查看更多"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bili_item_tvRefresh"
            tools:text="1000条新动态，点击刷新！"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>