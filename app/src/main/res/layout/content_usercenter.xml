<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pc.imitationliangcang.ui.activity.test"
    tools:showIn="@layout/app_bar_usercenter">

    <com.youth.banner.Banner
        android:id="@+id/banner_bili"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_follow_bili"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/live_home_follow_anchor"
            android:text="关注"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_center_bili"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/live_home_live_center"
            android:text="中心"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_slipvideo_bili"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/live_home_clip_video"
            android:text="小视频"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_search_bili"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/live_home_search_room"
            android:text="收索"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_all_category_bili"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/live_home_all_category"
            android:text="分类"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/ll_uperNumber"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_recommend_uper"
                android:text="推荐主播"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_recommend_uperNumber"
                android:layout_alignParentRight="true"
                tools:text="当前 1000 个主播"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bili_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
