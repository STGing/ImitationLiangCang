<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pc.imitationliangcang.ui.activity.MainActivity">

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <RadioGroup
        android:background="#16171a"
        android:orientation="horizontal"
        android:id="@+id/mainActivity_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <RadioButton
            style="@style/MainRadioButton"
            android:drawableTop="@drawable/shop_selecter"
            android:text="商店"
            />

        <RadioButton
            style="@style/MainRadioButton"
            android:drawableTop="@drawable/magazine_selecter"
            android:text="杂志"
            />

        <RadioButton
            style="@style/MainRadioButton"
            android:drawableTop="@drawable/trendperson_selecter"
            android:text="达人"
            />

        <RadioButton
            style="@style/MainRadioButton"
            android:drawableTop="@drawable/share_selecter"
            android:text="分享"
            />

        <RadioButton
            style="@style/MainRadioButton"
            android:drawableTop="@drawable/usercenter_selecter"
            android:text="用户"
            />

    </RadioGroup>

</LinearLayout>
